<div class="p-4 border-b border-gray-200 last:border-b-0">
  <div class="flex items-start gap-4">
    <div class="flex-shrink-0">
      <%= image_tag(image_path(cart_item.product.image_url), alt: cart_item.product.name, class: "h-20 w-20 object-cover rounded") %>
    </div>

    <div class="flex-1 min-w-0">
      <%= link_to cart_item.product.name, product_path(cart_item.product), class: "text-base font-semibold text-gray-900 hover:text-purple-600 block" %>
      <p class="text-sm text-gray-600 mt-1"><%= number_to_currency(cart_item.price) %> each</p>

      <div class="flex items-center justify-between mt-3">
        <div class="flex items-center gap-2">
          <span class="text-sm text-gray-600">Qty:</span>
          <span class="text-base font-semibold text-gray-900"><%= cart_item.quantity %></span>
        </div>

        <p class="text-lg font-bold text-gray-900"><%= number_to_currency(cart_item.price * cart_item.quantity) %></p>
      </div>
    </div>
  </div>

  <div class="mt-3 flex justify-end">
    <%= button_to cart_item_path(cart_item), method: :delete, class: "flex items-center gap-1 text-red-600 hover:text-red-800 text-sm font-medium", data: { turbo_confirm: "Are you sure?" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
      Remove
    <% end %>
  </div>
</div>
