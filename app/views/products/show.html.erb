<div class="max-w-3xl mx-auto px-4 py-6">
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="md:flex">
      <div class="md:flex-shrink-0 bg-gray-100 flex items-center justify-center p-6">
        <%= image_tag(image_path(@product.image_url), alt: @product.name, class: "h-48 w-48 object-cover") %>
      </div>

      <div class="p-6 flex-1">
        <h1 class="text-2xl font-bold text-gray-900 mb-3"><%= @product.name %></h1>

        <div class="mb-4">
          <span class="text-2xl font-bold text-purple-600"><%= number_to_currency(@product.selling_price) %></span>
        </div>

        <div class="mb-4">
          <h2 class="text-sm font-semibold text-gray-700 mb-2">Description</h2>
          <p class="text-sm text-gray-600 leading-relaxed"><%= @product.description %></p>
        </div>

        <div class="flex gap-3">
          <%= button_to "Add to Cart", cart_items_path(product_id: @product.id), method: :post, class: "bg-purple-600 hover:bg-purple-700 text-white font-semibold py-2 px-4 rounded transition" %>
          <%= link_to "Back to Products", products_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded transition" %>
        </div>
      </div>
    </div>
  </div>
</div>
